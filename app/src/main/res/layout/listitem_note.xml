<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_height_twoline"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/textview_note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_default"
        android:layout_marginLeft="@dimen/margin_horizontal_default"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/margin_horizontal_default"
        android:layout_marginRight="@dimen/margin_horizontal_default"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintBottom_toTopOf="@+id/textview_note_snippet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Groceries" />

    <TextView
        android:id="@+id/textview_note_snippet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_default"
        android:layout_marginLeft="@dimen/margin_horizontal_default"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/margin_horizontal_default"
        android:layout_marginRight="@dimen/margin_horizontal_default"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_note_title"
        tools:text="Milk, coffee, tea, sugar" />

</androidx.constraintlayout.widget.ConstraintLayout>

